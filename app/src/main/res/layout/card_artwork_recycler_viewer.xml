<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="254dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"

    android:layout_margin="5dp">
        <!-- Immagine del quadro -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/DepartmentIMG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/DepartmentID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"

                    android:autoSizeMaxTextSize="@dimen/text_margin"
                    android:fontFamily="@font/roboto"
                    android:gravity="bottom"
                    android:shadowColor="@color/material_dynamic_neutral90"

                    app:layout_constraintStart_toEndOf="@+id/DepartmentIMG"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Nome del quadro"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"

                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:autoSizeMaxTextSize="@dimen/text_margin"

                    android:fontFamily="@font/roboto"
                    android:gravity="bottom"
                    android:shadowColor="@color/material_dynamic_neutral90"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Nome del quadro"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/DepartmentID"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Nome dell'artista in basso con sfondo bianco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:padding="8dp">

                <TextView
                    android:id="@+id/DepartmentNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome dell'artista"
                    android:fontFamily="@font/roboto"

                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
        </LinearLayout>


        <!-- Nome del quadro sovrapposto all'immagine -->


</androidx.cardview.widget.CardView>
